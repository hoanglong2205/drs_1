<% provide :title, @user.name %>
<div class="row">
  <div class="col-md-4">
    <div class="user_info">
      <p>
        <%= @user.name %>
      </p>
      <p>
        <%= t "gender" %> 
        <%= @user.gender %>
      </p>        
     
      <p>
        <%= t "birthday" %> 
        <%= @user.birthday %>
      </p>
     
      <p>
        <%= t "email" %> 
        <%= @user.email %>
      </p>
     
      <p>
        <%= t "skill" %> 
        <%= @user.profile.skill.language %>
      </p>
     
      <p>
        <%= t "division" %> 
        <%= @user.profile.division.descrition %>
      </p>
    </div>
  </div>
</div>
