<li class="content">
  <h4>
    <%= position.position %>
    <% unless position.id == Position.first.id ||
      position.id == Position.second.id %>
      <%= t "slash" %>
      <%= link_to t("edit.button"), edit_admin_position_path(position) %>
      <%= t "slash" %>
      <%= link_to t("destroy.button"), admin_position_path(position),
        method: :delete, data: {confirm: t("destroy.confirm")} %>
    <% end %>
  </h4>
</li>
